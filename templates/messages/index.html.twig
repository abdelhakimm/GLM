<section class="container">
    <div class="row">
        <div class="col">
            <h1>Messagerie</h1>
            <p>Messages Recus : {{ app.user.received|length }}</p>
            <p>Messages Envoyés : {{ app.user.sent|length }}</p>
            <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                aria-controls="offcanvasExample">
                Voir mes messages
            </a>
            <a href="{{path('send')}}" class="btn btn-primary">Envoyer un message</a>
        </div>
    </div>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes messages</h2>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a class="list-group-item list-group-item-action active" href="{{path('profile')}}">Profil</a>
                <a class="list-group-item list-group-item-action" href="{{path('received')}}">Boite de réception</a>
                <a class="list-group-item list-group-item-action" href="{{path('sent')}}">Boite d'envoi</a>
            </div>
        </div>
    </div>
</section>
